<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" integrity="sha512-5fsy+3xG8N/1PV5MIJz9ZsWpkltijBI48gBzQ/Z2eVATePGHOkMIn+xTDHIfTZFVb9GMpflF2wOWItqxAP2oLQ==" crossorigin="anonymous" />
    <style>
        body {background-color: burlywood;}
    </style>
    <title>Document</title>
</head>
<body>
    <h1>Registrar</h1>

    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
        <li><%= error.message %></li>
        <% }) %> <% } %>
      </ul>

    <form action="/users/register" method="POST">
        <div>
            <input
            style="background-color:cornsilk"
            type="text" 
            id="username" 
            name="username" 
            placeholder="Usuario" required>
        </div>
        <div>
            <input 
            style="background-color:cornsilk"
            type="email" 
            id="email" 
            name="email" 
            placeholder="Email" required>
        </div>
        <div>
            <input 
            style="background-color:cornsilk"
            type="password" 
            id="password" 
            name="password" 
            placeholder="Contraseña" required>
        </div>
        <div>
            <input 
            style="background-color:cornsilk"
            type="password" 
            id="password2" 
            name="password2" 
            placeholder="Confirmar contraseña" required>
        </div>
        <div>
            <input type="submit" style="background-color:cornsilk" value="Registrar" />
        </div>
        <a href="/users/login" style="color:cadetblue"> Ya estás registrado? Accede aquí</a>
    </form>
</body>
</html>