<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" integrity="sha512-5fsy+3xG8N/1PV5MIJz9ZsWpkltijBI48gBzQ/Z2eVATePGHOkMIn+xTDHIfTZFVb9GMpflF2wOWItqxAP2oLQ==" crossorigin="anonymous" />
    <style>
        body {background-color: burlywood;}
    </style>
    <title>API Login</title>
</head>
<body>
    <h1>Login</h1>

    <ul>
        <% if (messages.success_msg) { %>
            <li><%= messages.success_msg %></li>
            <% } %>
    </ul>

    <ul>
        <% if (messages.error) { %>
            <li><%= messages.error %></li>
        <% } %>
    </ul>

    <form action="/users/login" method="POST">
        <div>
            <input 
            style="background-color:cornsilk"
            type="email" 
            name="email" 
            id="email" 
            placeholder="Email" required>
        </div>
        <div>
            <input 
            style="background-color:cornsilk"
            type="password" 
            name="password" 
            id="password" 
            placeholder="Password" required>
        </div>
        <div>
            <input type="submit" style="background-color:cornsilk" value="Login" />
        </div>
        <a href="/users/register" style="color:cadetblue" > Reg√≠strate</a>
    </form>
</body>
</html>